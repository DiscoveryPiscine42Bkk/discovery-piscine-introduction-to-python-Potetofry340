def summarize_tasks(tasks):
    summary = {}
    for task in tasks:
        summary[task[â€˜categoryâ€™]] = summary.get(task[â€˜categoryâ€™], 0) + 1
    if not summary:
        print(â€œNo tasks to summarize.â€)
    else:
        print(â€œ\n-- Task Summary â€”â€œ)
        for category, count in summary.items():
            print(fâ€{category.capitalize()}: {count} task(s)â€)
